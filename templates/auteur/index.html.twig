{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
.flash-toto{
    background-color:red;
    width:100%;
    padding:15px;
}
</style>
{% endblock %}

{% block javascripts %}
    <script>
    setTimeout(function(){
        let block = document.querySelector('.flash-toto');
        block.style.opacity = 0;
                        },
    3000);
    </script>
{% endblock %}

{% block title %}Auteur index{% endblock %}

{% block body %}

    <h1>Auteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>
                    <a href="{{ path('app_auteur_show', {'id': auteur.id}) }}">show</a>
                    <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_auteur_new') }}">Create new</a>
{% endblock %}
